{

  "manifest_version": 2,
  "name": "Doc Search",
  "version": "1.0",

  "description": "Distributed search engine for research papers.",

  "icons": {
    "48": "icons/book.png"
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/book.png",
    "default_title": "Doc Search",
    "default_popup": "doc_search_popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*.pdf", "file://*.pdf"],
      "js": ["pdf_checker.js"]
    }
  ]

}